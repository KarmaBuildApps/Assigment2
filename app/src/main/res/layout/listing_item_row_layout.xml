<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvASOSListingItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Title" />

        <ImageView
            android:id="@+id/ivASOSListingItemImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvASOSListingItemTitle"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_splash" />

        <TextView
            android:id="@+id/tvASOSListingItemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/ivASOSListingItemImage"
            android:layout_below="@id/ivASOSListingItemImage"
            android:text="Price" />
    </RelativeLayout>

</android.support.v7.widget.CardView>